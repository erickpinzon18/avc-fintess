rules_version = '2';

// Craft rules based on data in your Firestore database
// allow write: if firestore.get(
//    /databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin;
service firebase.storage {
  match /b/{bucket}/o {
    
    // Regla para imágenes de clases
    match /clases/{className}/{allPaths=**} {
      // Permitir lectura pública
      allow read: if true;
      
      // Permitir escritura solo a usuarios autenticados (admins)
      allow write: if request.auth != null;
    }
    
    // Regla para imágenes de blog
    match /blog/{postSlug}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Regla para imágenes de galería
    match /galeria/{folder}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Regla para imágenes de coaches
    match /coaches/{coachId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Regla para imágenes de eventos
    match /eventos/{eventId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Denegar todo lo demás por defecto
    match /{allPaths=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}
